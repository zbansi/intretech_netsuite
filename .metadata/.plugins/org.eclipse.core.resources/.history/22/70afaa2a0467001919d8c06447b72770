package com.intretech.suitetalk.client.common.authentication;

import com.netsuite.suitetalk.client.common.authentication.Credentials;

/**
 * <p>This class holds all necessary information for classic login/Request-Level Credentials authentication.</p>
 * <p>&copy; 2017 NetSuite Inc.</p>
 */
public class Passport {

    private Credentials credentials;
    private String account;
    private String role;

    /**
     * Constructor.
     */
    public Passport() {
        credentials = new Credentials(null, null);
    }

    /**
     * Constructor.
     *
     * @param credentials Credentials (email, password) to be used for authentication
     * @param account     NetSuite account number
     * @param role        Number of NetSuite role which should be used for authentication
     */
    public Passport(Credentials credentials, String account, String role) {
        this.credentials = credentials;
        this.account = account;
        this.role = role;
    }

    /**
     * Constructor.
     *
     * @param email    Email used for authentication
     * @param password Password used for authentication
     * @param account  NetSuite account number
     * @param role     Number of NetSuite role which should be used for authentication
     */
    public Passport(String email, String password, String account, String role) {
        this(new Credentials(email, password), account, role);
    }

    /**
     * @return Currently set credentials (email, password)
     */
    public Credentials getCredentials() {
        return credentials;
    }

    /**
     * Sets credentials.
     *
     * @param credentials Credentials (email, password) to be set
     */
    public void setCredentials(Credentials credentials) {
        this.credentials = credentials;
    }

    /**
     * @return Currently set email
     */
    public String getEmail() {
        return credentials.getEmail();
    }

    /**
     * Sets user email.
     *
     * @param email Use email used for authentication
     */
    public void setEmail(String email) {
        credentials.setEmail(email);
    }

    /**
     * @return Currently set password
     */
    public String getPassword() {
        return credentials.getPassword();
    }

    /**
     * Sets password.
     *
     * @param password Password used for authentication
     */
    public void setPassword(String password) {
        credentials.setPassword(password);
    }

    /**
     * @return Currently set account number
     */
    public String getAccount() {
        return account;
    }

    /**
     * Sets user's account.
     *
     * @param account User's account in NetSuite which should be user authenticated to
     */
    public void setAccount(String account) {
        this.account = account;
    }

    /**
     * @return Currently set role
     */
    public String getRole() {
        return role;
    }

    /**
     * Sets NetSuite role.
     *
     * @param role NetSuite role which should be used for authentication
     */
    public void setRole(String role) {
        this.role = role;
    }
}

